<Page x:Class="TestsSystem.Pages.EditTestsQuestionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestsSystem.Pages"
      mc:Ignorable="d" 
      MinWidth="800"
      MinHeight="400"
      Style="{StaticResource pageFont}"
      Title="Вопросы теста" Loaded="Page_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Margin="15" VerticalAlignment="Center" HorizontalAlignment="Stretch">
            <TextBlock Style="{StaticResource smallHeaderText}" Text="Вопросы:"/>
            <ListBox x:Name="questionsList" Height="150" Margin="0 10" SelectionChanged="questionsList_SelectionChanged"/>
            <TextBox Style="{StaticResource blueTextBox}" x:Name="editQuestionTextBox" Margin="0 5"/>
            <Button Style="{StaticResource butStyle}" Content="Изменить" x:Name="editQuestionBut" Click="editQuestionBut_Click" IsEnabled="False"/>
            <Button Style="{StaticResource butStyle}" Content="Удалить" Margin="0 5 0 10" x:Name="delQuestionBut" Click="delQuestionBut_Click" IsEnabled="False"/>
            <TextBox Style="{StaticResource blueTextBox}" x:Name="questionTextBox" Margin="0 5"/>
            <Button Style="{StaticResource butStyle}" Content="Добавить" x:Name="addQuestionBut" Click="addQuestionBut_Click"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Margin="15" HorizontalAlignment="Stretch" VerticalAlignment="Center">
            <TextBlock Style="{StaticResource smallHeaderText}" Text="Варианты ответа:"/>
            <ListBox x:Name="optionsList" Height="150" Margin="0 10" SelectionChanged="optionsList_SelectionChanged"/>
            <TextBox Style="{StaticResource blueTextBox}" x:Name="editOptionTextBox" Margin="0 5"/>
            <Button Style="{StaticResource butStyle}" Content="Изменить" x:Name="editOptionBut" Click="editOptionBut_Click" IsEnabled="False"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="0.5*"/>
                </Grid.ColumnDefinitions>
                <Button Style="{StaticResource butStyle}" Content="Удалить" Margin="0 5 5 10" x:Name="delOptionBut" Click="delOptionBut_Click" IsEnabled="False"/>
                <Button Grid.Column="1" Style="{StaticResource butStyle}" Content="Сделать правильным" Margin="5 5 0 10" x:Name="makeCorrectBut" Click="makeCorrectBut_Click" IsEnabled="False"/>
            </Grid>
            <TextBox Style="{StaticResource blueTextBox}" x:Name="optionTextBox" Margin="0 5"/>
            <Button Style="{StaticResource butStyle}" Content="Добавить" x:Name="addOptionBut" Click="addOptionBut_Click" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Page>
